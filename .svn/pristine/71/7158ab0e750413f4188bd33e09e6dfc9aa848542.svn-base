const (
	BIG_PIC_PATH   = "./static/upload/bigpic/"
	SMALL_PIC_PATH = "./static/upload/smallpic/"
	FILE_PATH      = "./static/upload/attachment/"
)

var pathArr []string = []string{"", BIG_PIC_PATH, SMALL_PIC_PATH, FILE_PATH}

type backBaseController struct {
	beego.Controller
	userid          int64
	username        string
	controller      string
	action          string
	layout          string
	layoutSections  map[string]string
	defaultController string
	defaultAction    string
}

func (this *backBaseController) Prepare() {
	controllerName, actionName := this.GetControllerAndAction()
	this.defaultController = "admin"
	this.defaultAction = "index"
	this.controller = strings.ToLower(controllerName[0 : len(controllerName)-10])
	this.action = strings.ToLower(actionName)
	this.layout = "layouts/main.html"
	this.layoutSections = make(map[string]string)
	this.layoutSections["Header"]  = "layouts/header.html"
	this.layoutSections["Left"]    = "layouts/left.html"
	this.layoutSections["Content"] = "layouts/content.html"
	this.layoutSections["Footer"]  = "layouts/footer.html"
	this.layoutSections["Right"]   = "layouts/right.html"
	this.Data["asset"]   = "/static/"
	this.Data["xsrf_token"] = this.XSRFToken()
	this.Data["xsrfdata"]   = template.HTML(this.XSRFFormHTML())
	this.Data["asset"]   = "/static/"
	this.Data["version"] = beego.AppConfig.String("AppVer")
	this.Data["adminid"] = this.userid
	this.Data["adminname"] = this.username
	//this.auth()
	//this.checkPermission()
}

//登录状态验证
func (this *backBaseController) auth() {

}


//渲染模版(包含布局)
func (this *backBaseController) render(tpl ...string) {
	var tplname string
	if len(tpl) == 1 {
		tplname =   tpl[0] + ".html"
	} else {
		tplname =  this.controller + "/" + this.action + ".html"
	}
	this.LayoutSections = this.layoutSections
	this.Layout  = this.layout
	this.TplName = tplname
}


//渲染模版(不包含布局)
func (this *backBaseController) renderPartial(tpl ...string) {
	var tplname string
	if len(tpl) == 1 {
		tplname =  tpl[0] + ".html"
	} else {
		tplname =  this.controller + "/" + this.action + ".html"
	}
	this.TplName = tplname
}

//显示错误提示
func (this *backBaseController) showMsg(msg ...string) {
	if len(msg) == 1 {
		msg = append(msg, this.Ctx.Request.Referer())
	}
	this.Data["msg"] = msg[0]
	this.Data["redirect"] = msg[1]
	this.Layout  = this.layout
	this.TplName = "admin/error.html"
	this.Render()
	this.StopRun()
}

func (this *backBaseController) showTips( msg interface{} ){
	this.TplName = "admin/tips.html"
	this.Data["Form"] = fmt.Sprintf("%v",msg)
}

//json输出
func (this * backBaseController) renderJson(Json interface{}) {
	//Json := map[string]interface{}{"code":0,"msg": "成功!","data":"1111"}
	this.Data["json"] = Json
	this.ServeJSON()
}

//是否post提交
func (this *backBaseController) isPost() bool {
	return this.Ctx.Request.Method == "POST"
}

//获取用户IP地址
func (this *backBaseController) getClientIp() string {
	s := strings.Split(this.Ctx.Request.RemoteAddr, ":")
	return s[0]
}

//权限验证
func (this *backBaseController) checkPermission() {
	if this.userid != 1 && this.controller == "user" {
		this.showMsg("抱歉，只有超级管理员才能进行该操作！")
	}
}


